<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/field_bg"
    android:layout_marginTop="18dp"
    >

    <TextView
        android:id="@+id/txt_title_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lock Room Receipt"
        android:textColor="@color/dark_brown"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_title_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_history_receipt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark_brown"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_room_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Type"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/soft_light_brown"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_history_receipt_date"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_history_receipt_room_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark_brown"
        app:layout_constraintTop_toBottomOf="@id/txt_room_type"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/soft_light_brown"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_history_receipt_room_type"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_history_receipt_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark_brown"
        app:layout_constraintTop_toBottomOf="@id/txt_session"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/soft_light_brown"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_history_receipt_session"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_receipt_history_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark_brown"
        app:layout_constraintTop_toBottomOf="@id/txt_username"
        app:layout_constraintStart_toStartOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>